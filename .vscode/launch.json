{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Go Server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/server/main.go",
      "cwd": "${workspaceFolder}",
      "env": {
        "GO_ENV": "development",
        "PORT": "8080"
      },
      "args": [
        "--base-url",
        "/hogehoge"
      ],
    },
    {
      "name": "Launch Go Server with Air (Auto-reload)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/server/main.go",
      "cwd": "${workspaceFolder}",
      "env": {
        "GO_ENV": "development",
        "PORT": "8080"
      },
      "args": []
    },
    {
      "name": "Start Air (Auto-reload only)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/server/main.go",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Launch Web Dev Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/web",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Launch Full Stack",
      "configurations": [
        "Launch Go Server",
        "Launch Web Dev Server"
      ]
    },
    {
      "name": "Launch Full Stack with Auto-reload",
      "configurations": [
        "Start Air (Auto-reload only)",
        "Launch Web Dev Server"
      ]
    }
  ]
}