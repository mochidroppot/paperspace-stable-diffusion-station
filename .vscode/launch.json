{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Go Server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/server/main.go",
      "cwd": "${workspaceFolder}",
      "env": {
        "GO_ENV": "development",
        "PORT": "8080"
      },
      "args": [],
    },
    {
      "name": "Launch Web Dev Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/web",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Launch Full Stack",
      "configurations": [
        "Launch Go Server",
        "Launch Web Dev Server"
      ]
    }
  ]
}